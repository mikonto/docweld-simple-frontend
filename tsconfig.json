{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client"],
    
    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    
    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // Emit
    "noEmit": true,
    
    // Type Checking - Strict but Beginner-Friendly
    "strict": true,                       // Enable all strict type checks
    "noUnusedLocals": true,              // Error on unused variables
    "noUnusedParameters": true,          // Error on unused parameters
    "noFallthroughCasesInSwitch": true, // Error on fallthrough cases in switch
    "noImplicitReturns": true,          // Error when not all paths return
    "forceConsistentCasingInFileNames": true,
    
    // JavaScript Support
    "allowJs": true,                     // Allow JS files during migration
    "checkJs": false,                    // Don't type-check JS files
    
    // Skip Library Checks
    "skipLibCheck": true,                // Skip type checking of .d.ts files
    
    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}